{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "lib": [
      "es2019"
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "lib", "bin"]
}
