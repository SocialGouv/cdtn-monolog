{
  "name": "@socialgouv/cdtn-monolog",
  "description": "CDTN log management : index logs and generate reports.",
  "publishConfig": {
    "access": "public"
  },
  "main": "index.js",
  "version": "1.0.0",
  "homepage": "https://github.com/SocialGouv/cdtn-monolog",
  "repository": {
    "type": "git",
    "url": "https://github.com/SocialGouv/cdtn-monolog.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "dev": "jest --watch",
    "lint": "eslint . --ext .js",
    "test": "jest",
    "test-one": "jest analysis --watch",
    "monolog": "node -r esm src/index.js",
    "build": "yarn run ncc build src/index.js -o dist",
    "start": "node ./dist/index.js"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.6.1",
    "data-forge": "^1.8.5",
    "data-forge-fs": "^0.0.8",
    "esm": "^3.2.25",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@socialgouv/eslint-config-recommended": "^0.20.0",
    "@zeit/ncc": "^0.22.1",
    "babel-jest": "^25.4.0",
    "eslint": "^6.8.0",
    "jest": "^25.4.0",
    "prettier": "^2.0.5",
    "husky": "^4.2.5"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testRegex": "src/.*\\.test\\.js$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint . --ext .ts"
    }
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
